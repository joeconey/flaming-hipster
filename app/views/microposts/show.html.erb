<% provide(:title, @micropost.title) %>
<div class="center jumbotron top-jumbo jumbo-blue">
   <h1><%= @micropost.title %></h1>
   <div class="idea-content">      
    <h3><%= @micropost.content %></h3>
  </div>
  </div>
 
<div class="container">
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="follow">
        <%= render 'users/follow_form' if logged_in? %>
    </section>
    <% if @micropost.question_id != nil %>
    <section class="question-link">
      This idea was in response to a question. <a href="/questions/<%= @micropost.question_id %>">Take a look at the question here.</a>
    </section>
     <% end %>
  </aside>
  <div class="col-md-8">
    <div class="vote-box">
      <div class="row vote-row">
        <div class="col-md-6">
         <h3> This idea has 
         <span class="votes">
         <span id="votes-<%= @micropost.id %>" class="stat">
            <%= @micropost.votes.count %>
          </span>  
        <%=  "vote".pluralize(@micropost.votes.count) %>
      </span>
    </h3>
      </div>
        <div class="col-md-6">
          <% if logged_in? %>
               <%= render :partial => 'microposts/vote_form', :locals => { :micropost_id => @micropost.id } if logged_in? %>
            <% else %>
              <a class="btn btn-default share-btn" href="/users/new">Signup to vote for this idea</a>
            <% end %>
        </div>
      </div>
            <div class="row vote-row">
        <div class="col-md-6">
         <h3> Share this on Facebook 
    </h3>
      </div>
        <div class="col-md-6">
                <a class="btn btn-default share-btn" href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url  %>">Share on Facebook</a>
         
        </div>
      </div>

    <div class="row vote-row">
        <div class="col-md-6">
         <h3> Leave feedback
    </h3>
      </div>
        <div class="col-md-6">
          <section class="comments section">
            COMMENTS SECTION
          </section>
        </div>
      </div>

      <div class="row vote-row">
        <div class="col-md-6">
         <h3> Fork this idea 
    </h3>
      </div>
        <div class="col-md-6">
           <% if logged_in? %>
             <a class="btn btn-default share-btn" href="/microposts/new?content=<%=u @micropost.content %>&title=<%=u @micropost.title  %>">Fork & post</a>
              <% else %>
              <a class="btn btn-default share-btn" href="/users/new">Signup to fork this idea</a>
            <% end %>
        </div>
      </div>


  </div>
  </div>
</div>
</div>