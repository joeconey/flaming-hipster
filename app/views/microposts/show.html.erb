<% provide(:title, @micropost.title) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
      <h3><%= @micropost.title %></h3>
      <p><%= @micropost.content %></p>
  </div>
</div>