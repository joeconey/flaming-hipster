<%= form_for(@question) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_area :name, placeholder: "What is your question?", class: 'form-control' %>
  </div>
   <br />
    <div class="field">
    	    <div class="checkbox">
      <label>
     <%= f.check_box :private  %> Make this question private
    </label>
    </div>
  </div>
  <br />
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
