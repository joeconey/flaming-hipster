<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: "Compose new idea..." %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Add flesh to the bone..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
