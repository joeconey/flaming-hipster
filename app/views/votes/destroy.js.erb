$(".vote-form").each(function(){
 if ($(this).is("#vote_form-<%=@micropost.id%>")){
 		$(this).html("<%= escape_javascript(render :partial => 'microposts/vote', :locals => { :micropost_id => @micropost.id }) %>");
 }
});

$(".votes-stat").each(function(){
 if ($(this).is("#votes-<%= @micropost.id %>")){
 		$(this).html('<%= @micropost.votes.count %>');
 }
});
