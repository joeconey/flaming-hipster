<% provide(:title, 'All questions') %>
<div class="container questions-container">
	<div class="row">
		<% if logged_in? %>
		<div class="col-md-4">

<h1>Add your own question</h1>
 <%= render 'shared/question_form' %>
</div>
<div class="col-md-8">
<% else %>
<div class="col-md-6 col-md-offset-3">
<% end %>	
<h1>All questions</h1>

<%= will_paginate %>

<ul class="users">
  <% @questions.each do |question| %>
      <%= render question  %>
  <% end %>
</ul>

<%= will_paginate %>
</div>
</div>
</div>
</div>